<div class="author">
    <h1 class="author__heading">Welcome to Blog WebSite</h1>
    <p class="author__body">Create and Edit your Blogs here</p>
</div>
<img src="https://wallpapercave.com/wp/wp2686603.jpg" alt="Person looking outside window"
class="hero-image"
width="981"
height="528">

<section class="articles" >
<h2 class="articles__heading">Latest Posts</h2>
<ul class ="articles-ul">

    <% data.forEach(post => { %>
     
   
    <li>
        <a href="/post/<%= post._id %>">
            <span><%= post.title %></span>
            <span class="articles-list__data"><%= post.createdAt.toDateString() %></span>
        </a>
    </li>
    <% }) %>
</ul>

<% if (nextPage !== null) { %>
<a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
 
<% } %>

</section>